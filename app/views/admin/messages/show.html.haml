- @nav_hierarchy = [:messages, @message_stream, @message]

%h2 View Message
= form_for(admin_message_stream_messages_path(@message_stream, @message), :html => { :class => 'admin-view' }) do |f|
  %fieldset
    .field
      = f.label :id, 'ID'
      = @message.id
    .field
      = f.label :message_stream_id, 'Message Stream ID'
      = link_to @message.message_stream_id, [:admin, @message_stream]
    .field
      = f.label :name
      = @message.name
    .field
      = f.label :title
      = @message.title
    .field
      = f.label :path
      = @message.path
    .field
      = f.label :offset_days, 'Offset Days'
      = @message.offset_days
    .field
      = f.label :sms_text, 'SMS Text'
      = @message.sms_text
    .field
      = f.label :date_created, 'Date Created'
      = @message.created_at.strftime '%b %e, %Y @ %r %Z'
    .field
      = f.label :last_updated, 'Last Updated'
      = @message.updated_at.strftime '%b %e, %Y @ %r %Z'
